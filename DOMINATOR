#!/bin/bash


_python_() {
    python3${pVer%.*} -c "$1"
}

_DOMINATORBOT_MAIN() {
    $(_python_ 'from git import Repo
import sys
_UPSTREAM_ = "https://github.com/dominator454/DOMINATORXBOT"
_BRANCH_ = "master"
repo = Repo.init()
origin = repo.create_remote("temponame", _UPSTREAM_)
origin.fetch()
repo.create_head(_BRANCH_, origin.refs[_BRANCH_])
repo.heads[_BRANCH_].checkout(True) ')
}

_dominator_repo () {
    local hrepo
    hrepo=`echo "aHR0cHM6Ly9naXRodWIuY29tL2RvbWluYXRvcjQ1NC9ET01JTkFUT1JYVVNFUkJPVA==" | base64 -d`
    echo "$rlink"
}

_dominator_zip () {
    echo "aHR0cHM6Ly9naXRodWIuY29tL2RvbWluYXRvcjQ1NC9ET01JTkFUT1JYVVNFUkJPVC9hcmNoaXZlL21hc3Rlci56aXA=" | base64 -d
}

_DOMINATORBOT_PLUG() {
    local hrepo=$(_dominator_repo)
    $(_python_ 'from git import Repo
import sys
_UPSTREAM_ = "'$hrepo'"
_BRANCH_ = "master"
repo = Repo.init()
origin = repo.create_remote("temponame", _UPSTREAM_)
origin.fetch()
repo.create_head(_BRANCH_, origin.refs[_BRANCH_])
repo.heads[_BRANCH_].checkout(True) ')
}

_starter () {
    local dominatorpath
    dominatorpath="DOMINATORXSERBOT.zip"
    echo "â•”â•â•â•â•â°ğ“†©à¼’ğ•¾ğ–™ğ–†ğ–—ğ–™ğ–ğ–“ğ–Œğ“†©à¼’â±â•ââŠ±â"
    echo "â•‘â•­â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â£"
    echo "â•‘â”£âª¼ğ“†©à¼’  ğ–€ğ–‘ğ–™ğ–—ğ–† ğ•»ğ–”ğ–œğ–Šğ–—ğ•±ğ–šğ–‘ğ–‘à¼’ğ“†ª"
    echo "â•‘â”£âª¼ğ“†©à¼’ğ•ºğ–œğ–“ğ–Šğ–— ğ•ºğ–‹ à¼’ğ“†ª"
    echo "â•‘â•°â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â£"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•ââŠ±âÛªÛª"
    wget -q $(_dominator_zip) -O "$dominatorpath"
    DOMINATORPATH=$(zipinfo -1 "$dominatorpath" | grep -v "/.");
    unzip -qq "$dominatorpath"
    rm -rf "$dominatorpath"
    # _DOMINATORBOT_MAIN
    cd $DOMINATORPATH
    # _DOMINATORBOT_PLUG
    python3 ../setup/updater.py ../requirements.txt requirements.txt
    echo "â•­â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â£"
    echo "â•‘â”£âª¼ğ•·ğ–”ğ–†ğ–‰ğ–ğ–“ğ–Œ.  ğ•»ğ–”ğ–œğ–Šğ–—ğ•±ğ–šğ–‘ğ–‘ ğ•½ğ–”ğ•­ğ–”ğ–”ğ–™"
    echo "â•°â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â£"
    python3 -m DominatorBot
}

_starter
